@model Department

<div class="container">
    <div class="card">
        <div class="card-header text-center text-uppercase">
            Student Details
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Department ID</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @Model.DepartmentId</p>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Department Name</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @Model.DepartmentName</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <a asp-controller="Department" asp-action="Index" class="btn btn-danger">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
