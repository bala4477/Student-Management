@model Department
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-uppercase text-center">Create Department</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 border-1 border">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="@Model.Id" class="form-label"></label>
                    <input asp-for="@Model.Id" class="form-control" />
                    <span asp-validation-for="@Model.Id" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.DepartmentId" class="form-label"></label>
                    <input asp-for="@Model.DepartmentId" class="form-control" />
                    <span asp-validation-for="@Model.DepartmentId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.DepartmentName" class="form-label"></label>
                    <input asp-for="@Model.DepartmentName" class="form-control" />
                    <span asp-validation-for="@Model.DepartmentName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <a asp-controller="Department" asp-action="Index" class="btn btn-danger">Back</a>
                    <button type="submit" class="btn btn-success">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}